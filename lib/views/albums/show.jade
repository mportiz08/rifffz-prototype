div#player
  != partial('shared/import_modal')
  div.top-bar
    div.container
      div.row
        div.span2.controls
          ul.unstyled
            li
              a(href="#").sprite-icons-Back
            li
              a(href="#").play-pause.sprite-icons-Play
            li
              a(href="#").sprite-icons-Next
        div.span2.controls
          ul.unstyled
            li
              a(href="/").sprite-icons-Home
            li
              a(href="#import-album-modal", data-toggle="modal").import-album.sprite-icons-Add
            li
              a(href="#").sprite-icons-Search
        div.span1
          div.time-passed 0:00
        div.span9.progress
          div.progress-bar
            span(style="width: 0%;")
        div.span2
          div.time-total 0:00
        audio
          source(src="", type="audio/mpeg")
  div#main.container
    div.row
      div.album-cover-view.span8
        div.album-cover
          div.album-cover-overlay
      div.album-info.span8
        h1.album-name= album.name
        small.album-year= album.year
        h2.artist-name= artist.name
        ul.album-song-list.unstyled
          each song in album.songs
            li
              a(href="#")= song
